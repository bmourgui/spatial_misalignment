	keywords = {climate change, climate envelope modelling, generalized additive modelling, multiple scales, realized niche, refugia, resolution, scale of effect, solar radiation, spatial misalignment, spatial resolution, spatial scale, species distribution modelling},
	pages = {1--8},
	file = {Full Text PDF:/Users/bmourgui/Zotero/storage/DM7DA4GM/Austin et Van Niel - 2011 - Improving species distribution models for climate .pdf:application/pdf;Snapshot:/Users/bmourgui/Zotero/storage/YH9F7D3C/j.1365-2699.2010.02416.html:text/html},
