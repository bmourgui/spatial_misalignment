	year = {2018},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/ecog.02871},
	keywords = {coarse scale, fine scale, grain size, niche relationships, scale of effect, scale-dependence, simulation, spatial grain, spatial misalignment, spatial resolution, spatial scale, species distribution model, species–environment relationships},
	pages = {1604--1615},
	file = {Full Text PDF:/Users/bmourgui/Zotero/storage/37G7EJLF/Mertes et Jetz - 2018 - Disentangling scale dependencies in species enviro.pdf:application/pdf;Snapshot:/Users/bmourgui/Zotero/storage/F9RYQQUK/ecog.html:text/html},
}

@article{fletcher2023,
author = {Fletcher Jr., Robert J. and Betts, Matthew G. and Damschen, Ellen I. and Hefley, Trevor J. and Hightower, Jessica and Smith, Thomas A. H. and Fortin, Marie-Josée and Haddad, Nick M.},
title = {Addressing the problem of scale that emerges with habitat fragmentation},
journal = {Global Ecology and Biogeography},
volume = {32},
number = {6},
pages = {828-841},
keywords = {connectivity, edge, fragmented landscape, habitat loss, MAUP, patch size},
doi = {https://doi.org/10.1111/geb.13658},
url = {https://onlinelibrary.wiley.com/doi/abs/10.1111/geb.13658},
eprint = {https://onlinelibrary.wiley.com/doi/pdf/10.1111/geb.13658},
abstract = {Abstract Fragmentation and scale Although habitat loss has well-known impacts on biodiversity, the effects of habitat fragmentation remain intensely debated. It is often argued that the effects of habitat fragmentation, or the breaking apart of habitat for a given habitat amount, can be understood only at the scale of entire landscapes composed of multiple habitat patches. Yet, fragmentation also impacts the size, isolation and habitat edge for individual patches within landscapes. Addressing the problem of scale on fragmentation effects is crucial for resolving how fragmentation impacts biodiversity. Scaling framework We build upon scaling concepts in ecology to describe a framework that emphasizes three “dimensions” of scale in habitat fragmentation research: the scales of phenomena (or mechanisms), sampling and analysis. Using this framework, we identify ongoing challenges and provide guidance for advancing the science of fragmentation. Implications We show that patch- and landscape-scale patterns arising from habitat fragmentation for a given amount of habitat are fundamentally related, leading to interdependencies among expected patterns arising from different scales of phenomena. Aggregation of information when increasing the grain of sampling (e.g., from patch to landscape) creates challenges owing to biases created from the modifiable areal unit problem. Consequently, we recommend that sampling strategies use the finest grain that captures potential underlying mechanisms (e.g., plot or patch). Study designs that can capture phenomena operating at multiple spatial extents offer the most promise for understanding the effects of fragmentation and its underlying mechanisms. By embracing the interrelationships among scales, we expect more rapid advances in our understanding of habitat fragmentation.},
year = {2023}
}


