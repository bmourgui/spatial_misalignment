	author = {Keil, Petr and Belmaker, Jonathan and Wilson, Adam M. and Unitt, Philip and Jetz, Walter},
	year = {2013},
	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/j.2041-210x.2012.00264.x},
	keywords = {AUC, birds, California, downscaling, fractal, hierarchical model, logit, niche modelling, non lu, realized niche, San Diego, SDM, spatial scale, species distribution},
