	year = {2016},
	keywords = {abundance, microclimate, multiple scales, prediction, spatial scale, species distribution model},
	file = {Full Text PDF:/Users/bmourgui/Zotero/storage/KU9YI2LF/Rebaudo et al. - 2016 - Microclimate Data Improve Predictions of Insect Ab.pdf:application/pdf},
