	journal = {International Journal of Climatology},
	author = {Hijmans, Robert J. and Cameron, Susan E. and Parra, Juan L. and Jones, Peter G. and Jarvis, Andy},
	month = dec,
	year = {2005},
	note = {Publisher: John Wiley \& Sons, Ltd},
	keywords = {ANUSPLIN, climate change, climatic data, error, GIS, interpolation, precipitation, spatial interpolation, species distribution model, temperature, uncertainty, weather station, WorldClim},
	pages = {1965--1978},
	file = {Hijmans et al. - 2005 - Very high resolution interpolated climate surfaces.pdf:/Users/bmourgui/Zotero/storage/YMXIULYA/Hijmans et al. - 2005 - Very high resolution interpolated climate surfaces.pdf:application/pdf},
